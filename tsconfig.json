{
    "compilerOptions": {
        "outDir": "./assets/src",
        "sourceMap": false,
        "noImplicitAny": true,
        "target": "ES6",
        "lib": ["dom", "es6", "es2015.promise"],
        "module": "commonjs",
        "allowJs": true,
        "rootDirs": [
           "vaango_ui"
           //"tests"
        ],
        "experimentalDecorators": true
    },
    "include": [
        "vaango_ui/VaangoUI.ts",
        "vaango_ui/views/**/*",
        "vaango_ui/vuex/**/*",
        "vaango_ui/graphics/**/*"
        //"vaango_ui/**/*" 
        //"tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "assets"
    ]
}
